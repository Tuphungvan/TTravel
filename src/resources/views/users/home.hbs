<script>
    document.addEventListener("DOMContentLoaded", function() {
    // Fetch dữ liệu từ API
    fetch('/api/reviews')
        .then(response => response.json())
        .then(reviews => {
            const reviewsContainer = document.querySelector('.swiper-wrapper');
            // Kiểm tra nếu có reviews
            if (reviews.length === 0) {
                reviewsContainer.innerHTML = "<p>Không có đánh giá nào.</p>";
            } else {
                // Tạo các phần tử swiper-slide cho mỗi review
                reviews.forEach(review => {
                    const slide = document.createElement('div');
                    slide.classList.add('swiper-slide');
                    slide.innerHTML = `
                        <div class="box">
                            <img src="${review.image}" alt="${review.name}">
                            <h3>${review.name}</h3>
                            <p>${review.review}</p>
                        </div>
                    `;
                    reviewsContainer.appendChild(slide);
                });
            }
        })
        .catch(error => {
            console.error('Lỗi khi tải dữ liệu:', error);
        });
});

</script>
