<!-- views/admin/add-review.hbs -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

<section style="margin: 20px;">
    <h1>Thêm Review</h1>
<form action="/admin/add-review" method="POST">
    <div class="mb-3">
        <label for="image" class="form-label">Ảnh</label>
        <input type="text" class="form-control" id="image" name="image" placeholder="URL ảnh" required>
    </div>
    <div class="mb-3">
        <label for="name" class="form-label">Tên</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Tên người đánh giá" required>
    </div>
    <div class="mb-3">
        <label for="review" class="form-label">Đánh giá</label>
        <textarea class="form-control" id="review" name="review" placeholder="Nội dung đánh giá" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Thêm Review</button>
</form>

{{#if message}}
    <div class="alert alert-warning mt-3">{{message}}</div>
{{/if}}
</section>
