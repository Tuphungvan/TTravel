<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý Gallery</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h1 class="mb-4">Quản lý Gallery</h1>

        <!-- Thông báo nếu không tìm thấy mục -->
        {{#if message}}
            <div class="alert alert-warning">
                {{message}}
            </div>
        {{/if}}

        <!-- Danh sách các mục trong gallery -->
        <div class="mb-3">
            <a href="/admin/gallery/add" class="btn btn-primary">Thêm mục mới</a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Dữ liệu</th>
                    <th>Loại</th>
                    <th>Danh mục</th>
                    <th>Chú thích</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                {{#each galleryItems}}
                    <tr>
                        <td>{{increment @index}}</td>
                        <td><img src="{{this.mediaUrl}}" alt="{{this.caption}}" width="100" height="80px"></td>
                        <td>{{this.type}}</td>
                        <td>{{this.category}}</td>
                        <td>{{this.caption}}</td>
                        <td>
                            <a href="/admin/gallery/update/{{this._id}}" class="btn btn-warning btn-sm">Sửa</a>
                            <form action="/admin/gallery/delete/{{this._id}}" method="POST" style="display:inline;">
    <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
</form>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
        <a href="/admin/dashboard" class="btn btn-secondary">Quay lại</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
