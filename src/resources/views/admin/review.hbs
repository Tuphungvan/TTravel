<!-- views/admin/review.hbs -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<section>
    <h1>Danh Sách Đánh Giá</h1>

{{#if reviews}}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Ảnh</th>
                <th>Tên</th>
                <th>Đánh Giá</th>
                <th>Hành Động</th>
            </tr>
        </thead>
        <tbody>
            {{#each reviews}}
                <tr>
                    <td><img src="{{this.image}}" alt="Ảnh của {{this.name}}" width="100" class="img-thumbnail"></td>
                    <td>{{this.name}}</td>
                    <td>{{this.review}}</td>
                    <td>
                        <a href="/admin/delete-review/{{this._id}}" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa?')">Xóa</a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>Không có đánh giá nào.</p>
{{/if}}

<a href="/admin/add-review" class="btn btn-success">Thêm mới đánh giá</a>
</section>
<a style="margin-top: 30px;" href="/admin/dashboard" class="btn btn-secondary">Quay lại</a>